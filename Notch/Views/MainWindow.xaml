<Window x:Class="Notch.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notch" Height="40" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" WindowStartupLocation="Manual">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border x:Name="NotchBorder" 
                Background="Black" 
                CornerRadius="0,0,15,15" 
                VerticalAlignment="Center"
                Height="40"
                MouseEnter="NotchBorder_MouseEnter" 
                MouseLeave="NotchBorder_MouseLeave" HorizontalAlignment="Center" Width="399"/>
    </Grid>
</Window>